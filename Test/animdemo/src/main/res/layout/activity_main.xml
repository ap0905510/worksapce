<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent" />

    <RelativeLayout
        android:id="@+id/rl_full_h5_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="195dp"
        android:layout_marginLeft="12dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:background="@drawable/hx_full_hook_orange_nor"
            android:gravity="center"
            android:text="活动详情"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startAnim"
        android:text="开始动画" />

    <Button
        android:layout_below="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startBuilder"
        android:text="builder" />

    <View
        android:id="@+id/full_msg_tip"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_red_message_tip"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"/>

</RelativeLayout>